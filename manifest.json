{
	"name": "Copy As Markdown",
	"version": "0.1",
	"description": "Convert selected text to Markdown and copy to the clipboard.",
	"background_page": "background.html",
	"content_scripts": [ {
		"matches": ["<all_urls>"],
		"js": ["content.js"]
	}],
	"permissions": [
		"http://*/*",
		"https://*/*",
		"contextMenus",
		"tabs",
		"clipboardWrite",
		"notifications"
	],
	"icons": { 
		"16": "icons/markdown-icon-smaller.png",
		"48": "icons/markdown-icon-small.png",
		"128": "icons/markdown-icon.png"
	}
}
